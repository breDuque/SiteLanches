@model Lanche

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="img-fluid">
        <img src="@Model.ImagemUrl" style="height:200px;width:200px" class="img-rounded" alt=""/>
    </div>
    <div class="caption">
        <h3 class="formPullRightButton"> @Model.Preco.ToString("c")</h3>
        <h3>
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
        </h3>
        <p>@Model.DescricaoCurta</p>
    </div>
    <div class="text-right">
        <p class="button">
            <a class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                Incluir no Carrinho <b class="bi-cart"></b>
            </a>
        </p>
    </div>
</div>