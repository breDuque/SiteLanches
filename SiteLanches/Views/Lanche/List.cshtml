@model IEnumerable<Lanche>

<h2>Todos os Lanches</h2>
<div class="row">
    @foreach (var lanche in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="img-fluid">
                <img src="@lanche.ImagemUrl" style="height:200px;width:200px" class="img-rounded" alt="" />
            </div>
            <div class="caption">
                <h3 class="formPullRightButton"> @lanche.Preco.ToString("c")</h3>
                <h3>
                    @lanche.Nome
                </h3>
                <p>@lanche.DescricaoCurta</p>
            </div>
        </div>
    }
</div>